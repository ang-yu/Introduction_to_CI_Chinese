\begin{frame}{因果推断的传统}
\vspace{2em}
\begin{tabular}{c|c|c}
     代表人物 & 学科 & 流派 \\
     \hline
     Rubin, Imbens, Angrist & 统计，经济 & potential outcomes \\
     \hline
     Pearl & 计算机 & directed acyclic graph \\
     \hline
     Heckman & 经济 & parametric control function \\
     \hline
     Robins & 生统，流病 & marginal structural model \\ 
     & & structural nested mean model\\
     & & g-formula \\
     \hline
     Rosenbaum, VanderWeele & 统计，流病 & sensitivity analysis \\
     \hline
     Manski & 经济 & partial identification \\
     \hline
     Spirtes, Glymour & 哲学 & causal discovery  
\end{tabular}
\end{frame}

\begin{frame}{Potential outcomes}
    \begin{itemize}
        \item $Y(D=1)_i$; $Y(D=0)_i$
        \item[] 假如（通过外在干预）上了清北，收入是多少；假如（通过外在干预）没上清北，收入是多少 
        \item 个体层次的处理效应
        \item[] $\tau_i = Y(D=1)_i-Y(D=0)_i$
        \item 因果推断的根本问题：个体层次的处理效应不可观测
        \item 群体层次上的平均效应：ATE, ATT, ATU
    \end{itemize}
    \vspace{1.5em}
    \centering
    \begin{tabular}{c|c|c|c}
    D & Y(D=0) & Y(D=1) & Effect \\ 
    \hline
    0 & \checkmark & X & $\tau_1$ \\
    \hline
    0 & \checkmark & X & $\tau_2$ \\
    \hline
    1 & X & \checkmark & $\tau_3$ \\
    \hline
    1 & X & \checkmark & $\tau_4$ \\
    \end{tabular}
\end{frame}

